<div class="flex items-center py-6 border-b border-gray-200" data-cart-item="<%= cart_item.id %>">
  <!-- Product Image -->
  <div class="flex-shrink-0 w-20 h-20 bg-gray-200 rounded-lg overflow-hidden">
    <div class="w-full h-full flex items-center justify-center text-gray-400">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
  </div>

  <!-- Product Details -->
  <div class="flex-1 ml-6">
    <div class="flex items-start justify-between">
      <div>
        <h3 class="text-lg font-medium text-gray-900">
          <%= link_to product.name, product_path(product), class: "hover:text-blue-600" %>
        </h3>
        
        <% if variant.name.present? %>
          <p class="text-sm text-gray-500 mt-1">
            Variant: <%= variant.name %>
          </p>
        <% end %>

        <% if variant.variant_attributes.present? %>
          <div class="flex flex-wrap gap-2 mt-2">
            <% variant.variant_attributes.each do |key, value| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                <%= key.humanize %>: <%= value %>
              </span>
            <% end %>
          </div>
        <% end %>

        <!-- Stock Status -->
        <div class="mt-2">
          <%= render Atoms::StockStatusComponent.new(
            stock_quantity: variant.stock_quantity,
            size: :small
          ) %>
        </div>
      </div>

      <!-- Price -->
      <div class="text-right">
        <%= render Atoms::PriceComponent.new(
          price_cents: variant.price_cents,
          size: :medium,
          classes: "font-medium text-gray-900"
        ) %>
        <p class="text-sm text-gray-500">per item</p>
      </div>
    </div>

    <!-- Quantity and Actions -->
    <div class="flex items-center justify-between mt-4">
      <div class="flex items-center space-x-3">
        <!-- Quantity Selector -->
        <%= form_with url: update_item_cart_path, method: :patch, local: false, class: "flex items-center space-x-2" do |form| %>
          <%= form.hidden_field :id, value: cart_item.id %>
          
          <label for="quantity_<%= cart_item.id %>" class="text-sm font-medium text-gray-700">
            Qty:
          </label>
          
          <%= form.select :quantity, 
              options_for_select((1..max_quantity).map { |i| [i, i] }, quantity),
              {},
              { 
                id: "quantity_#{cart_item.id}",
                class: "rounded border-gray-300 text-sm focus:ring-blue-500 focus:border-blue-500",
                onchange: "this.form.submit();"
              } %>
        <% end %>

        <!-- Total Price for this item -->
        <div class="text-sm text-gray-600">
          Total: <%= render Atoms::PriceComponent.new(
            price_cents: cart_item.total_price_cents,
            size: :small,
            classes: "font-medium"
          ) %>
        </div>
      </div>

      <!-- Remove Button -->
      <%= link_to remove_item_cart_path(id: cart_item.id), 
          method: :delete,
          data: { 
            confirm: "Remove #{product.name} from cart?",
            remote: true
          },
          class: "text-red-600 hover:text-red-800 text-sm font-medium" do %>
        Remove
      <% end %>
    </div>

    <!-- Stock Warning -->
    <% unless in_stock? %>
      <div class="mt-3 p-3 bg-yellow-50 border border-yellow-200 rounded-md">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-800">
              Only <%= variant.stock_quantity %> items available. Please adjust quantity.
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
