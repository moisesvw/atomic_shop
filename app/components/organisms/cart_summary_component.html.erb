<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-lg font-medium text-gray-900 mb-4">Order Summary</h2>
  
  <% if empty? %>
    <div class="text-center py-8">
      <div class="text-gray-400 mb-4">
        <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Your cart is empty</h3>
      <p class="text-gray-500 mb-4">Add some products to get started!</p>
      <%= link_to "Continue Shopping", root_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  <% else %>
    <!-- Cart Items Summary -->
    <div class="space-y-3 mb-6">
      <div class="flex justify-between text-sm">
        <span class="text-gray-600">Items (<%= total_items %>)</span>
        <span class="font-medium">
          <%= render Atoms::PriceComponent.new(
            price_cents: total_price_cents,
            size: :small
          ) %>
        </span>
      </div>
      
      <div class="flex justify-between text-sm">
        <span class="text-gray-600">Estimated Tax</span>
        <span class="font-medium">$<%= sprintf("%.2f", estimated_tax) %></span>
      </div>
      
      <div class="flex justify-between text-sm">
        <span class="text-gray-600">
          Shipping
          <% if estimated_shipping == 0 %>
            <span class="text-green-600 text-xs">(Free!)</span>
          <% end %>
        </span>
        <span class="font-medium">
          <% if estimated_shipping == 0 %>
            <span class="text-green-600">Free</span>
          <% else %>
            $<%= sprintf("%.2f", estimated_shipping) %>
          <% end %>
        </span>
      </div>
      
      <% if estimated_shipping > 0 %>
        <div class="text-xs text-gray-500 bg-blue-50 p-2 rounded">
          ðŸ’¡ Free shipping on orders over $50!
        </div>
      <% end %>
    </div>

    <!-- Total -->
    <div class="border-t border-gray-200 pt-4 mb-6">
      <div class="flex justify-between">
        <span class="text-base font-medium text-gray-900">Order Total</span>
        <span class="text-lg font-bold text-gray-900">
          $<%= sprintf("%.2f", estimated_total) %>
        </span>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="space-y-3">
      <%= render Atoms::ButtonComponent.new(
        label: "Proceed to Checkout",
        type: :primary,
        size: :large,
        classes: "w-full justify-center",
        data: { action: "checkout" }
      ) %>
      
      <%= link_to "Continue Shopping", root_path, 
          class: "block w-full text-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      
      <%= link_to "Clear Cart", clear_cart_path, 
          method: :delete,
          data: { confirm: "Are you sure you want to clear your cart?" },
          class: "block w-full text-center px-4 py-2 text-sm font-medium text-red-600 hover:text-red-800" %>
    </div>

    <!-- Security Badge -->
    <div class="mt-6 pt-4 border-t border-gray-200">
      <div class="flex items-center justify-center text-xs text-gray-500">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        Secure checkout powered by SSL encryption
      </div>
    </div>
  <% end %>
</div>
